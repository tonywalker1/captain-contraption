display_help() {
    echo "Run AIDE file integrity checks."
    echo "Usage: aide-check"
    echo "       aide-check -h|--help    show this message and exit"
}

# Handle help flag
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    display_help
    exit 0
fi

CONF_FILE="$(conf-which captain-contraption.conf)" && source "$CONF_FILE" || {
    echo "ERROR: captain-contraption.conf not found" >&2
    exit 1
}
AIDE_CONF="$(conf-which aide.conf)" || {
    echo "ERROR: aide.conf not found" >&2
    exit 1
}

aide --check --config "$AIDE_CONF"
