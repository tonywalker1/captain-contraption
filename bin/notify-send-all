display_help() {
    echo "Send a notification to all logged-in GUI users."
    echo ""
    echo "Usage: notify-send-all [options] <summary> [body]"
    echo ""
    echo "Options:"
    echo "  -? | --help    This text."
    echo ""
    echo "All options from notify-send are supported, see below..."
    echo
    notify-send --help
    exit 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h | --help)
            display_help
            exit 1
            ;;
        *)
            break
            ;;
    esac
done

for SESSION_DIR in /run/user/*; do
    UID=$(basename "$SESSION_DIR")

    # Skip if not a valid UID directory
    if ! [[ "$UID" =~ ^[0-9]+$ ]]; then
        continue
    fi

    # Skip if DBUS socket doesn't exist
    if [ ! -S "$SESSION_DIR/bus" ]; then
        continue
    fi

    # Convert UID to username
    USERNAME=$(getent passwd "$UID" | cut -d: -f1)
    if [ -z "$USERNAME" ]; then
        continue
    fi

    # Send notification
    sudo -u "$USERNAME" \
        DBUS_SESSION_BUS_ADDRESS=unix:path="$SESSION_DIR/bus" \
        notify-send ${@+"$@"}
done

exit 0

