display_help() {
    echo "Edit nftables firewall rules with validation and reload."
    echo "Usage: nft-edit [path-to-nftables.conf]"
    echo "       nft-edit -h|--help    show this message and exit"
}

# Handle help flag
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    display_help
    exit 0
fi

# see if we can find nftables.conf in the usual places
if [ "$1" ]; then
    # argument 1 holds the path (hopefully)
    NFT_CONFIG="$1"
else
    NFT_CONFIG="$(conf-which nftables.conf)" || {
        echo "ERROR: nftables.conf not found" >&2
        exit 1
    }
fi

# edit nftables.conf, check for errors, reload the rules, and print them
mutate "$NFT_CONFIG" && \
    nft --check --file "$NFT_CONFIG" && \
    systemctl reload nftables.service && \
    nft list ruleset
