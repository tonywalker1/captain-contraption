# see if we can find nftables.conf in the usual places
if [ "$1" ]; then
    NFT_CONFIG="$1"  # argument 1 holds the path
elif [ -f /etc/sysconfig/nftables.conf ]; then
    NFT_CONFIG=/etc/sysconfig/nftables.conf    # Fedora/RHEL
elif [ -f /etc/nftables.conf ]; then
    NFT_CONFIG=/etc/nftables.conf    # Debian and derivatives
else
    echo "ERROR: Can't find /etc/nftables.conf"
    exit 1
fi

# edit nftables config, check for errors, reload the rules, and print them
$EDITOR "$NFT_CONFIG" && \
    nft --check --file "$NFT_CONFIG" && \
    systemctl reload nftables.service && \
    nft list ruleset
